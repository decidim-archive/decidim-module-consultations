<div class="columns section view-side mediumlarge-4 mediumlarge-push-8 large-3 large-push-9">
  <% if user_signed_in? %>
    <div class="card extra definition-data">
      <div class="definition-data__item">
        <%= render partial: "decidim/shared/follow_button", locals: { followable: question } %>
      </div>
    </div>
  <% end %>
  <%= feature_reference(current_question) %>
  <%= render partial: "decidim/shared/share_modal" %>
  <%= embed_modal_for decidim_consultations.question_question_widget_url(question, format: :js) %>
  <%= render partial: "decidim/consultations/questions/statistics" %>
</div>
